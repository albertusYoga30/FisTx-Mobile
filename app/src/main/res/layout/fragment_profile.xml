<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_primary"
    tools:context=".ui.profile.ProfileFragment">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_main" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_white_radius10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@id/user_image"
            app:layout_constraintEnd_toStartOf="@+id/user_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_image">

            <TextView
                android:id="@+id/user_name"
                style="@style/TextStyleBold14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setyo Rahmawan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/phone_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_phone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintTop_toBottomOf="@id/user_name" />

            <TextView
                android:id="@+id/phone_number"
                style="@style/TextStyleRegular12Gray4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="0856678890001"
                app:layout_constraintBottom_toBottomOf="@+id/phone_imageView"
                app:layout_constraintStart_toEndOf="@+id/phone_imageView"
                app:layout_constraintTop_toTopOf="@+id/phone_imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/profile_example"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_setting"
        style="@style/TextStyleSemiBold12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/text_setting_acount"
        app:layout_constraintStart_toStartOf="@+id/layout_profile"
        app:layout_constraintTop_toBottomOf="@+id/layout_profile" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personal_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_rounded_white_radius10"
        app:layout_constraintEnd_toEndOf="@+id/layout_profile"
        app:layout_constraintStart_toStartOf="@+id/layout_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_setting">

        <ImageView
            android:id="@+id/personal_info_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_personal_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/personal_info_textView"
            style="@style/TextStyleSemiBold12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="@string/personal_info_textView"
            app:layout_constraintBottom_toBottomOf="@+id/personal_info_imageView"
            app:layout_constraintStart_toEndOf="@+id/personal_info_imageView"
            app:layout_constraintTop_toTopOf="@+id/personal_info_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/security"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_rounded_white_radius10"
        app:layout_constraintEnd_toEndOf="@+id/personal_information"
        app:layout_constraintStart_toStartOf="@+id/personal_information"
        app:layout_constraintTop_toBottomOf="@+id/personal_information">

        <ImageView
            android:id="@+id/security_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_security"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/security_textView"
            style="@style/TextStyleSemiBold12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="@string/security_textView"
            app:layout_constraintBottom_toBottomOf="@+id/security_imageView"
            app:layout_constraintStart_toEndOf="@+id/security_imageView"
            app:layout_constraintTop_toTopOf="@+id/security_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/about_textView"
        style="@style/TextStyleSemiBold12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/about_textView"
        app:layout_constraintStart_toStartOf="@+id/security"
        app:layout_constraintTop_toBottomOf="@+id/security" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_rounded_white_radius10"
        app:layout_constraintEnd_toEndOf="@+id/security"
        app:layout_constraintStart_toStartOf="@+id/about_textView"
        app:layout_constraintTop_toBottomOf="@+id/about_textView">

        <ImageView
            android:id="@+id/contact_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_contact_us"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact_textView"
            style="@style/TextStyleSemiBold12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="@string/contact_textView"
            app:layout_constraintBottom_toBottomOf="@+id/contact_imageView"
            app:layout_constraintStart_toEndOf="@+id/contact_imageView"
            app:layout_constraintTop_toTopOf="@+id/contact_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_rounded_white_radius10"
        app:layout_constraintEnd_toEndOf="@+id/contact"
        app:layout_constraintStart_toStartOf="@+id/contact"
        app:layout_constraintTop_toBottomOf="@+id/contact">

        <ImageView
            android:id="@+id/about_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_about_us"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/about_us_textView"
            style="@style/TextStyleSemiBold12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="@string/about_us_textView"
            app:layout_constraintBottom_toBottomOf="@+id/about_imageView"
            app:layout_constraintStart_toEndOf="@+id/about_imageView"
            app:layout_constraintTop_toTopOf="@+id/about_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/logout_text"
        style="@style/TextStyleSemiBold12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/logout_textView"
        app:layout_constraintStart_toStartOf="@+id/about"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_rounded_white_radius10"
        app:layout_constraintEnd_toEndOf="@+id/about"
        app:layout_constraintStart_toStartOf="@+id/logout_text"
        app:layout_constraintTop_toBottomOf="@+id/logout_text">

        <ImageView
            android:id="@+id/logout_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/ic_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logout_textView"
            style="@style/TextStyleSemiBold12Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="@string/about_us_textView"
            app:layout_constraintBottom_toBottomOf="@+id/logout_imageView"
            app:layout_constraintStart_toEndOf="@+id/logout_imageView"
            app:layout_constraintTop_toTopOf="@+id/logout_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>