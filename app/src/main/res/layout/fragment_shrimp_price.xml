<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.shrimpPrice.ShrimpPriceFragment">

    <TextView
        android:id="@+id/location_textview"
        style="@style/TextStyle400Regular12Gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:text="@string/location_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_location_layout"
        style="@style/LayoutSearchLocationSoftBlueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_textview">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/location_search"
            style="@style/SearchLocationSoftBlueInputStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_search_location" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/contact_button"
        app:layout_constraintTop_toBottomOf="@id/search_location_layout">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chart_label_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chart">

            <ImageView
                android:id="@+id/dot_blue_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/ic_dot_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shrimp100_textview"
                style="@style/TextStyleSemiBold10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/shrimp_100_textview"
                app:layout_constraintBottom_toBottomOf="@+id/dot_blue_imageview"
                app:layout_constraintStart_toEndOf="@+id/dot_blue_imageview"
                app:layout_constraintTop_toTopOf="@+id/dot_blue_imageview" />

            <ImageView
                android:id="@+id/dot_green_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_dot_green"
                app:layout_constraintBottom_toBottomOf="@+id/shrimp100_textview"
                app:layout_constraintStart_toEndOf="@+id/shrimp100_textview"
                app:layout_constraintTop_toTopOf="@+id/shrimp100_textview" />

            <TextView
                android:id="@+id/shrimp70_textview"
                style="@style/TextStyleSemiBold10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/shrimp_70_textview"
                app:layout_constraintBottom_toBottomOf="@+id/dot_green_imageview"
                app:layout_constraintStart_toEndOf="@+id/dot_green_imageview"
                app:layout_constraintTop_toTopOf="@+id/dot_green_imageview" />

            <ImageView
                android:id="@+id/dot_purple_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_dot_purple"
                app:layout_constraintBottom_toBottomOf="@+id/shrimp70_textview"
                app:layout_constraintStart_toEndOf="@+id/shrimp70_textview"
                app:layout_constraintTop_toTopOf="@+id/shrimp70_textview" />

            <TextView
                android:id="@+id/shrimp40_textview"
                style="@style/TextStyleSemiBold10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/shrimp_40_textview"
                app:layout_constraintBottom_toBottomOf="@+id/dot_purple_imageview"
                app:layout_constraintStart_toEndOf="@+id/dot_purple_imageview"
                app:layout_constraintTop_toTopOf="@+id/dot_purple_imageview" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sparator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/soft_primary"
            app:layout_constraintTop_toBottomOf="@+id/chart_label_layout" />

        <TextView
            android:id="@+id/all_size_shrimp_textview"
            style="@style/TextStyleSemiBold12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:text="@string/all_size_shrimp_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sparator" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_shrimp_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_size_shrimp_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--empty placeholder-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/contact_button"
        app:layout_constraintTop_toBottomOf="@+id/search_location_layout">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="133dp"
            android:src="@drawable/ic_empty_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            style="@style/TextStyleBold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/empty_price_textview"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView7"
            style="@style/TextStyle400Regular12Gray1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="62dp"
            android:layout_marginTop="14dp"
            android:text="@string/empty_price_desc_textview"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/refresh_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <ImageView
                android:id="@+id/refresh_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/refresh_textview"
                style="@style/TextStyleBold14Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/refresh_page_textview"
                app:layout_constraintBottom_toBottomOf="@id/refresh_imageview"
                app:layout_constraintStart_toEndOf="@id/refresh_imageview"
                app:layout_constraintTop_toTopOf="@id/refresh_imageview" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/contact_button"
        style="@style/ContactUsButtonBlueOutlineStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/contact_us_textview"
        app:icon="@drawable/ic_whatsapp_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/filter_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter_button"
        style="@style/FilterButtonBlueStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/filter_textview"
        app:icon="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/contact_button" />

</androidx.constraintlayout.widget.ConstraintLayout>