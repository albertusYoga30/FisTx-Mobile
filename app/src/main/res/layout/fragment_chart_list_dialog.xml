<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="25dp"
    android:paddingHorizontal="18dp"
    tools:context=".ui.home.bottomsheet.ChartListDialogFragment">

    <TextView
        android:id="@+id/choose_chart_textview"
        style="@style/TextStyleSemiBold14Gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_chart_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/choose_chart_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/choose_chart_textview" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="@color/gray6"
        app:layout_constraintTop_toBottomOf="@+id/choose_chart_textview"
        tools:layout_editor_absoluteX="18dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chart_daily_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/view2">

        <TextView
            android:id="@+id/chart_daily_ph_textview"
            style="@style/TextStyleSemiBold14Gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_ph_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chart_daily_ph_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintBottom_toBottomOf="@+id/chart_daily_ph_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart_daily_ph_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chart_water_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/chart_daily_ph"
        tools:layout_editor_absoluteX="18dp">

        <TextView
            android:id="@+id/chart_water_temp_textview"
            style="@style/TextStyleSemiBold14Gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chart_water_temp_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chart_water_temp_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintBottom_toBottomOf="@+id/chart_water_temp_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart_water_temp_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chart_dissolved_oxygen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/chart_water_temp"
        tools:layout_editor_absoluteX="18dp">

        <TextView
            android:id="@+id/chart_dissolved_oxygen_textview"
            style="@style/TextStyleSemiBold14Gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chart_dissolved_oxygen_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chart_dissolved_oxygen_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintBottom_toBottomOf="@+id/chart_dissolved_oxygen_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart_dissolved_oxygen_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chart_Salinity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/chart_dissolved_oxygen"
        tools:layout_editor_absoluteX="18dp">

        <TextView
            android:id="@+id/chart_Salinity_textview"
            style="@style/TextStyleSemiBold14Gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chart_Salinity_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chart_Salinity_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintBottom_toBottomOf="@+id/chart_Salinity_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart_Salinity_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chart_orp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/chart_Salinity"
        tools:layout_editor_absoluteX="18dp">

        <TextView
            android:id="@+id/chart_orp_textview"
            style="@style/TextStyleSemiBold14Gray1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chart_orp_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/chart_orp_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintBottom_toBottomOf="@+id/chart_orp_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart_orp_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>