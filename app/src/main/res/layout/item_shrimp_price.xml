<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author_post_date"
        style="@style/TextStyleRegular10Gray3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/dummy_author_postPrice1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_price_imageview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/author_post_date"
        app:layout_constraintTop_toBottomOf="@+id/author_post_date"
        app:srcCompat="@drawable/ic_price" />

    <TextView
        android:id="@+id/shrimp_price"
        style="@style/TextStyleSemiBold18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/dummy_price1"
        app:layout_constraintBottom_toBottomOf="@+id/ic_price_imageview"
        app:layout_constraintStart_toEndOf="@+id/ic_price_imageview"
        app:layout_constraintTop_toTopOf="@+id/ic_price_imageview" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="@+id/ic_price_imageview"
        app:layout_constraintTop_toBottomOf="@+id/ic_price_imageview"
        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/location"
        style="@style/TextStyleRegular10Gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/dummy_location1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/label_size_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        app:layout_constraintStart_toEndOf="@+id/location"
        app:layout_constraintTop_toTopOf="@+id/location"
        app:srcCompat="@drawable/ic_dot_blue" />

    <TextView
        android:id="@+id/shrimp_size"
        style="@style/TextStyleRegular10Gray1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/shrimp_size_100"
        app:layout_constraintBottom_toBottomOf="@+id/label_size_indicator"
        app:layout_constraintStart_toEndOf="@+id/label_size_indicator"
        app:layout_constraintTop_toTopOf="@+id/label_size_indicator" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_rounded_8_softprimary"
        android:src="@drawable/ic_right_arrow"
        android:layout_marginVertical="31dp"
        app:layout_constraintBottom_toTopOf="@+id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:background="@color/gray6"
        app:layout_constraintTop_toBottomOf="@+id/shrimp_size" />



</androidx.constraintlayout.widget.ConstraintLayout>