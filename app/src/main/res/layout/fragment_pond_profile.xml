<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_primary"
    tools:context=".ui.pond.PondProfileFragment">

    <ImageView
        android:id="@+id/empty_pond_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_data_empty"
        app:layout_constraintBottom_toTopOf="@+id/button_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_pond_textview"
        style="@style/TextStyleBold14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/empty_pond_textview"
        app:layout_constraintEnd_toEndOf="@+id/empty_pond_imageview"
        app:layout_constraintStart_toStartOf="@+id/empty_pond_imageview"
        app:layout_constraintTop_toBottomOf="@+id/empty_pond_imageview" />

    <TextView
        android:id="@+id/empty_pond_desc_textview"
        style="@style/TextStyle400Regular12Gray1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="53dp"
        android:layout_marginTop="14dp"
        android:text="@string/empty_pond_desc_textview"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_pond_textview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add"
        style="@style/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="24dp"
        android:text="@string/btn_add_pond_textview"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>