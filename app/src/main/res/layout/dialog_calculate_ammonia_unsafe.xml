<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_rounded_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/success_dialog_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_calculate_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calculate_result_textView"
        style="@style/TextStyleSemiBold14Gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="102dp"
        android:layout_marginTop="32dp"
        android:lineHeight="28sp"
        android:text="@string/calculate_result_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/success_dialog_imageView" />

    <TextView
        android:id="@+id/calculate_result_desc_textView"
        style="@style/TextStyle400Regular12Gray1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="49dp"
        android:layout_marginTop="8dp"
        android:text="@string/calculate_result_desc_textview"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculate_result_textView" />

    <ImageView
        android:id="@+id/safe_result_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_unsafe_verified"
        app:layout_constraintEnd_toEndOf="@+id/calculate_result_desc_textView"
        app:layout_constraintStart_toStartOf="@+id/calculate_result_desc_textView"
        app:layout_constraintTop_toBottomOf="@+id/calculate_result_desc_textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="49dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_rounded_10_red"
        android:paddingVertical="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/safe_result_imageView"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/ammonia_safe_result_textview"
            style="@style/TextStyleBold14White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ammonia_unsafe_result_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>