<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FisTx" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/status_bar_color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="MainActivityStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="actionBarStyle">@style/ActionBarMainStyle</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationViewStyle</item>
    </style>

    <style name="AuthActivityStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBarMainStyle</item>
    </style>


    <style name="CustomBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_view_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_view_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/primary</item>
        <item name="background">@drawable/bg_rounded_10_soft_primary</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:fontWeight">600</item>
        <item name="lineHeight">14.63dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>