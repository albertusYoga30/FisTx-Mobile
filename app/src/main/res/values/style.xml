<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backgroundInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black1</item>
        <item name="android:background">@drawable/bg_outline_gray</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/gray4</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="buttonInput" parent="Widget.AppCompat.Button">
        <item name="android:height">54dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/bg_btn_input</item>
    </style>

    <style name="buttonInputOutline" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/bg_outline_blue</item>
    </style>

    <style name="ActionBarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    //font style
    <style name="TextStyleRegular12Gray" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black3</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextStyleRegular12Black" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextStyleSemiBold12" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextStyleSemiBold18" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextDialogStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


    // Dialog Alert Style
    <style name="DialogBackgroundStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/DialogShape</item>
    </style>

    <style name="DialogShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="dialogCornerRadius">30dp</item>
    </style>

    <style name="StatusBarStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/white</item>
        <item name="statusBarBackground">@color/primary</item>
    </style>




</resources>