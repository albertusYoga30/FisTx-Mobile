<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backgroundInput" parent="Widget.AppCompat.EditText">
        <item name="android:height">44dp</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:background">@drawable/bg_outline_gray</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/gray4</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="buttonInput" parent="Widget.AppCompat.Button">
        <item name="android:height">54dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/bg_btn_input</item>
    </style>

    <style name="buttonInputOutline" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/bg_outline_blue</item>
    </style>

    <style name="ActionBarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>